#!/usr/bin/env ruby
require_relative '../lib/turn.rb'

board = []
ii=0
while(ii<9)
  board << " "
  ii+=1
end

puts "Please enter 1-9:"

move=gets.chomp

move_index=input_to_index(move)
if (valid_move?(board, move_index)
  make_move(board, move_index)
  
else
  puts "FAILURE Please enter 1-9:"
  move = gets.chomp
  make_move(board, move_index)
end


